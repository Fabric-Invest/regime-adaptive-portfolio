# Fabric Platform
# Note: FABRIC_API_KEY is automatically injected by fabric-cli dev via docker-compose.yaml
# Only set this manually for production deployment or non-CLI usage
# FABRIC_API_KEY=your_fabric_api_key_here

# Development mode (strategy exits after one loop when true)
FABRIC_DEV_MODE=true
# In dev: run this many iterations then exit (default 1); 0 = run until Ctrl+C
# FABRIC_DEV_ITERATIONS=5
# In dev: seconds to sleep between iterations (default 2; production uses 24h)
# FABRIC_DEV_SLEEP_SECONDS=2

# DEX Execution (0x)
ZERO_X_API_KEY=your_0x_api_key_here

# EVM Wallet
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# Optional: Binance API for funding rates
# Public endpoints may work without authentication
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Optional: CoinGecko API for historical prices (12-week momentum)
# Free tier works with rate limits; set for higher limits in production
# COINGECKO_API_KEY=your_coingecko_api_key_here

# Logging
LOG_LEVEL=INFO
